<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_color"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip" >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/userCenter"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>

   <TextView
        android:id="@+id/relativeLayout_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_background"
        android:drawableLeft="@drawable/faq"
        android:drawablePadding="10dip"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="16dip"
        android:paddingTop="10dip"
        android:text="个人信息"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />
   <TextView
        android:id="@+id/relativeLayout_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_background"
        android:drawableLeft="@drawable/app_setting"
        android:drawablePadding="10dip"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="16dip"
        android:paddingTop="10dip"
        android:text="消息中心"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />
   <TextView
        android:id="@+id/relativeLayout_fankui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_background"
        android:drawableLeft="@drawable/shiyongzhinan"
        android:drawablePadding="10dip"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="16dip"
        android:paddingTop="10dip"
        android:text="消息反馈"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

</LinearLayout>