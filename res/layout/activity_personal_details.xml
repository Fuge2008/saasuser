<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:saasuser="http://schemas.android.com/apk/res/com.small.saasuser.activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.small.saasuser.view.BaseTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        saasuser:saasusertitle="未来计划" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10.0dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/app_padding"
                    android:text="头像"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/query_tv_touxiang"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/userlogo" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="用户名称" />

                <TextView
                    android:id="@+id/query_tv_name"
                    style="@style/Style_TextView2"
                    android:hint="男" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="性别" />

                <TextView
                    android:id="@+id/query_tv_Sex"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="男" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/query_tv_Age"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="23" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="身高" />

                <TextView
                    android:id="@+id/query_tv_Heitht"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="体重" />

                <TextView
                    android:id="@+id/query_tv_Weitht"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="1324645646" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="身份证号" />

                <TextView
                    android:id="@+id/query_tv_Identification"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="手机号码" />

                <TextView
                    android:id="@+id/query_tv_PhoneNum"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="1322@qq.com" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="所属政企名称" />

                <TextView
                    android:id="@+id/query_tv_EnterpriseName"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="所属公司" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="工号" />

                <TextView
                    android:id="@+id/query_tv_Number"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="A" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="工龄" />

                <TextView
                    android:id="@+id/query_tv_WorkAge"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="部门" />

                <TextView
                    android:id="@+id/query_tv_Department"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="1111" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="职位" />

                <TextView
                    android:id="@+id/query_tv_Position"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="xxxx有限公司" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="职级" />

                <TextView
                    android:id="@+id/query_tv_Level"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="上级人员姓名" />

                <TextView
                    android:id="@+id/query_tv_UpLevelStaffName"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="上级人员工号" />

                <TextView
                    android:id="@+id/query_tv_UpLevelStaffNumber"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="入职时间" />

                <TextView
                    android:id="@+id/query_tv_EntryTime"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/s_line" />

            <RelativeLayout
                android:id="@+id/stop_view17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/Style_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="在职状态" />

                <TextView
                    android:id="@+id/query_tv_InJobState"
                    style="@style/Style_TextView2"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:hint="0" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>